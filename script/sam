#!/usr/bin/env perl

use 5.010001;

use strict;
use warnings;

use App::Sam;
use File::Spec;
use Getopt::Long 2.33 qw{ :config auto_version pass_through };
use Pod::Usage;

our $VERSION = '0.000_001';

use constant IS_TTY	=> -t STDOUT;

use open qw{ :std :encoding(utf-8) };

my %opt;

GetOptions( \%opt,
    qw{ dump! },
    help => sub { pod2usage( { -verbose => 2 } ) },
) or pod2usage( { -verbose => 0 } );

my $dump = delete $opt{dump};
my $files_from = delete $opt{files_from};

my $sam = App::Sam->new(
    break	=> IS_TTY,
    color	=> IS_TTY,
    die		=> 1,
    argv	=> \@ARGV,
);

if ( $dump ) {

    require YAML;
    {
	# Suppress warnings from trying to print "\N{U+FFFE}".
	no warnings qw{ utf8 };
	print YAML::Dump( $sam );
	# Flush any "\N{U+FFFE}" remaining in the buffer. Otherwise they
	# seem to cause utf8 warnings when the next print is done, and
	# outside the scope of the above 'no warnings qw{ utf8 };'. For
	# whatever reason, this is not a problem if there is no next
	# print.
	STDOUT->flush();
    }

    my %mod;
    foreach ( sort keys %INC ) {
	index( $_, 'App/Sam' ) == 0
	    or next;
	$mod{$_} = $INC{$_};
    }
    print YAML::Dump( \%mod );

} else {

    push @ARGV, $sam->files_from();

    @ARGV
	or @ARGV = ( File::Spec->curdir() );

    $sam->process( $_ ) for @ARGV;
}

__END__

=head1 TITLE

sam - Search for strings in files, and possibly modify them

=head1 SYNOPSIS

 sam foo *.txt
 sam --help
 sam --version

=head1 OPTIONS

<<< replace boiler plate >>>

=head2 --help

This option displays the documentation for this script. The script then
exits.

=head2 --version

This option displays the version of this script. The script then exits.

=head1 DETAILS

<<< replace boiler plate >>>

